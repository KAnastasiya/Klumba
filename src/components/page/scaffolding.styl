@require '../../utils/styl/variables.styl'
@require '../../utils/styl/mixins.styl'

.root
  font font-base
  color font-color-dark
  line-height 1.2
  overflow auto

  &_lock
    overflow hidden

  &__body
    min-width 1200px
    margin 0

.main-content
  padding 50px 0
  background url('img/page-bg.png') repeat
  box-shadow inset 0 2px 6px rgba(30,30,30,0.35)

.content-wrapper
  width content-wrapper-width
  margin 0 auto

.link
  color font-color-dark
  font-weight 700

  &:hover
    text-decoration none

.icon
  height 15px
  background-color transparent
  border none
  cursor: pointer

  &:focus
    outline: none

.btn
  color #fff
  font 300 18px font-family-add
  line-height 1.3
  text-decoration none

  display inline-block
  padding 10px 25px
  background-color color-akcent
  border-radius 3px
  border: none

  vertical-align middle
  cursor: pointer

  &:not(:last-child)
    margin-right 20px

  &:hover
    background-color color-akcent-darken

  &:focus
    outline: none
