@require '../../utils/styl/variables.styl'
@require '../../utils/styl/mixins.styl'

.form_order
  .form__controls
    .form__tips
      margin 15px 0 0

.chosen-product
  clearfix()
  margin-bottom 30px

  &__img-container
    float left
    width 224px
    height 226px
    background-color #544841

  &__info
    float right
    width calc(100% - 244px)
    font 300 14px font-family-add

  &__name,
  &__price
    color color-akcent
    font-size 18px
    margin 0

  &__name
    line-height 1.2
    margin -5px 0 12px 0

  &__details
    line-height 1.5
    margin 0 0 25px 0

  &__bonuses
    font-size 12px
    list-style none
    padding 0
    margin 0 0 25px 0

  &__bonuses-item
    padding-left 30px
    position relative

    &:not(:last-of-type)
      margin-bottom 8px

    &::before
      absolute-vertical-centered()
      square(20px)
      content ''
      background-repeat no-repeat
      background-position center
      background-size contain

  &__bonuses-item_card::before
    background-image url('img/bonuses_card.svg')

  &__bonuses-item_free-delivery::before
    background-image url('img/bonuses_free-delivery.svg')

  &__bonuses-item_photo::before
    background-image url('img/bonuses_photo.svg')
